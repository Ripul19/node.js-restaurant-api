<body>
    <main>
        <form class="restaurant-form" action="/" method="POST">
            <div class="form-control">
                <label for="name">Name</label><br>
                <input type="text" name="name" id="name" placeholder="Type here...">
            </div>
            <div class="form-control">
                <label for="name">Position</label><br>
                <input type="number" name="position" id="position" placeholder="Type here...">
            </div>
            <div class="form-control">
                <label for="name">Category</label><br>
                <input type="text" name="category" id="category" placeholder="Type here...">
            </div>
            <div class="form-control">
                <label for="name">Rating</label><br>
                <input type="number" name="rating" id="rating" placeholder="Type here...">
            </div>
            <button class="btn" type="submit">Submit</button>
        </form>
    </main>
